{% extends 'admin_base.html.twig' %}

{% block title %}Edit Lesson
{% endblock %}

{% block content %}

	<section
		class="uk-section">
		<!-- breadCrumb -->
		<div class="uk-container uk-margin">
			<ul class="uk-breadcrumb">
				<li>
					<a href="{{path('app_home')}}">Home</a>
				</li>

				<li>
					<a href="{{path('lesson_index')}}">Leçons</a>
				</li>
				<li>
					<p>Leçon:
						<em>{{lesson.title}}</em>
						_ Modification
					</p>
				</li>
			</ul>
		</div>
		<!-- end of breadcrumb -->

		<div class="uk-container uk-margin-top">
			<h1 class="uk-heading-line uk-text-center">
				Modification de la leçon</h1>
		</div>
		<div class="uk-container uk-margin-top uk-container-small">
			{{ include('lesson/_form.html.twig') }}
			<div class="uk-grid uk-grid-small uk-grid-divider uk-margin-top uk-margin-bottom" uk-grid>
				<div>
					<a class="uk-button uk-button-text" href="{{ path('lesson_index') }}">
						<span uk-icon="icon: arrow-left"></span>
						retour à la liste</a>
				</div>
				<div>
					<a href="#delete-confirm" uk-toggle>
						<span uk-icon="icon: trash"></span>
					</a>
				</div>
			</div>
		</div>
	</section>

	{{ include('lesson/_delete_form.html.twig')}}

{% endblock %}

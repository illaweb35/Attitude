<div class="uk-card uk-card-default uk-card-small uk-card-hover">
    <div class="uk-card-header">
        <div class="uk-grid uk-grid-small">
            <div class="uk-width-auto">
                <h4>Leçons de dance</h4>
            </div>
            <div class="uk-width-expand uk-text-right panel-icons">
                <a class="uk-icon-link" data-uk-icon="icon: move" data-uk-tooltip href="#" title="Move"></a>
            </div>
        </div>
    </div>
    <div class="uk-card-body">
        <table class="uk-table">
            <thead>
                <tr>
                    <th>titre</th>
                    <th>Jour</th>
                    <th>Horaires</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for lesson in lessons %}
                    <tr>
                        <td>
                            <a class="uk-link-text" href="{{ path('lesson_show',{'slug':lesson.slug})}}">{{lesson.title|capitalize}}</a>
                        </td>
                        <td>{{lesson.dayLesson}}</td>
                        <td>de
                            {{lesson.startHour|date('H:i')}}
                            à
                            {{lesson.endHour|date('H:i')}}</td>
                        <td>
                            <div class="uk-grid uk-grid-small uk-grid-divider" uk-grid>
                                <a href="{{ path('lesson_show',{'slug':lesson.slug})}}">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a href="{{ path('lesson_edit',{'slug':lesson.slug})}}">
                                    <span uk-icon="icon: file-edit"></span>
                                </a>
                                <a href="#delete-confirm" uk-toggle>
                                    <span uk-icon="icon: trash"></span>
                                </a>
                            </div>
                        </td>
                    </tr>
                    {{ include('lesson/_delete_form.html.twig') }}
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>

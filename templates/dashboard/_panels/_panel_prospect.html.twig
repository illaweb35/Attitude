<div class="uk-card uk-card-default uk-card-small uk-card-hover">
    <div class="uk-card-header">
        <div class="uk-grid uk-grid-small">
            <div class="uk-width-auto">
                <h4>emails reçus</h4>
            </div>
            <div class="uk-width-expand uk-text-right panel-icons">
                <a class="uk-icon-link" data-uk-icon="icon: move" data-uk-tooltip href="#" title="Move"></a>
            </div>
        </div>
    </div>
    <div class="uk-card-body">
        <table class="uk-table">
            <thead>
                <tr>
                    <th>Email</th>
                    <th>Sujet</th>
                    <th>Reçu le
                    </th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for prospect in prospectsPanel %}
                    <tr>
                        <td>
                            <a class="uk-link-text uk-text-small" href="mailto:{{prospect.email}}?subject=Dance Attitude Bréal sous montfort">{{prospect.email}}</a>
                        </td>
                        <td>
                            <p>{{prospect.subject}}</p>
                        </td>
                        <td>
                            <p class="uk-text-small">{{prospect.createdAt|date('d M Y')}}</p>
                        </td>
                        <td>
                            <div class="uk-grid uk-grid-small uk-grid-divider" uk-grid>
                                <a href="{{path('prospect_show',{'id': prospect.id})}}">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a href="{{ path('prospect_edit',{'id': prospect.id})}}">
                                    <span uk-icon="icon: file-edit"></span>
                                </a>
                                <a href="#delete-confirm" uk-toggle>
                                    <span uk-icon="icon: trash"></span>
                                </a>
                            </div>
                        </td>
                    </tr>
                    {{ include('prospect/_delete_form.html.twig') }}
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>

{{ form_start(form) }}
<form action="">
    <fieldset class="uk-fieldset">
        <div class="uk-margin">
            {{form_row(form.image)}}
            <div class="uk-form-danger">
                {{form_errors(form.image)}}
            </div>

        </div>
        <div class="uk-margin">
            {{form_row(form.imageCaption)}}
            <div class="uk-form-danger">
                {{form_errors(form.imageCaption)}}
            </div>

        </div>
        <hr class="uk-divider-icon">
        <div class="uk-margin">
            <label class="uk-form-label">Titre</label>
            {{form_widget(form.title)}}
            <div class="uk-form-danger">
                {{form_errors(form.title)}}
            </div>
        </div>
        <div class="uk-margin">
            <label class="uk-form-label">Description</label>
            {{form_widget(form.subTitle)}}
            <div class="uk-form-danger">
                {{form_errors(form.subTitle)}}
            </div>
        </div>
        <div class="uk-margin">
            <label class="uk-form-label">Contenu</label>
            {{form_widget(form.content)}}
            <div class="uk-form-danger">
                {{form_errors(form.content)}}
            </div>
        </div>
        <div class="uk-width-1-2">
            <label class="uk-form-label" for="">Cat√©gorie</label>
            {{form_widget(form.category)}}
            <div class="uk-form-danger">{{form_errors(form.category)}}</div>
        </div>
        <hr class="uk-divider-icon">

        {{ form_widget(form) }}
        <div class="uk-margin">
            <button class="uk-button uk-button-primary">{{ button_label|default('Enregistrer') }}</button>
        </div>
    </fieldset>

</form>
{{ form_end(form) }}

{{ form_start(form) }}

<img class="uk-border-pill" data-src="{{ asset('img/uploads/' ~ user.image) }}" width="100" height="100" alt="{{user.imageCaption}}" uk-img>

<form action="" class="uk-grid-small" enctype="multipart/form-data" method="post" uk-grid>
    <div class="uk-width-1-1">
        <div class="js-upload uk-placeholder uk-text-center">
            <span uk-icon="icon: cloud-upload"></span>
            <span class="uk-text-middle">Attach binaries by dropping them here or</span>
            <div uk-form-custom>
                {{form_widget(form.image)}}
                <span class="uk-link">selecting one</span>
            </div>
            {{user.image}}
            <div class="uk-form-danger">{{form_errors(form.image)}}</div>
        </div>
        <progress class="uk-progress" hidden id="js-progressbar" max="100" value="0"></progress>

    <div class="uk-width-1-1">
        <label class="uk-form-label">Description de l'image</label>
        {{form_widget(form.imageCaption)}}
        <div class="uk-form-danger">{{form_errors(form.imageCaption)}}</div>
    </div>
    <div class="uk-width-1-1">
        <label class="uk-form-label">Email</label>
        {{form_widget(form.email)}}
        <div class="uk-form-danger">{{form_errors(form.email)}}</div>
    </div>
    <div class="uk-width-1-1">
        <label class="uk-form-label" for="">Pseudo</label>
        {{form_widget(form.pseudo)}}
        <div class="uk-form-danger">{{form_errors(form.pseudo)}}</div>
    </div>
    <div class="uk-margin">
        <label class="uk-form-label">RÃ´les</label>
        <div class="uk-checkbox">{{form_widget(form.roles)}}</div>
    </div>

    {{ form_widget(form) }}
    <div class=" uk-margin">
        <button class="uk-button uk-button-primary">{{ button_label|default('Enregistrer') }}</button>
    </div>

    {{ form_end(form) }}</form>

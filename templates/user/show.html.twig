{% extends 'admin_base.html.twig' %}

{% block title %}User
{% endblock %}

{% block content %}
    <section class="uk-section">
        <div class="uk-container">
            <h1>User
                {{user.pseudo}}</h1>
            <article class="uk-article">
                <h1 class="uk-article-title">
                    {{user.pseudo}}
                </h1>
                <img data-src="{{ user.image}}" alt="{{user.imageCaption}}" uk-img>
                <p class="uk-text-lead">{{user.roles ? user.roles|json_encode : '' }}</p>
                <div class="uk-grid-small uk-grid-divider uk-child-width-auto" uk-grid>
                    <div>
                        <a class="uk-button uk-button-text" href="{{ path('user_index') }}">back to list</a>
                    </div>
                    {% if is_granted("ROLE_USER") %}
                        <div>
                            <a class="uk-button uk-button-link" href="{{ path('user_edit', {'slug':user.slug}) }}" uk-icon="icon: file-edit"></a>
                        </div>
                        <div>
                            <a href="#delete-confirm" uk-toggle>
                                <span uk-icon="icon: trash"></span>
                            </a>
                        {% endif %}
                    </div>
                </article>
            </div>
        </section>
        {{ include('user/_delete_form.html.twig') }}

    {% endblock %}

<section class="uk-section uk-section-muted">
    <h1 class="uk-heading-line uk-text-center">Les derni√®res news</h1>
    <!-- breadcrumb -->
    <div class="uk-container uk-margin">
        <ul class="uk-breadcrumb">

            <li>
                <a href="{{path('home')}}">Home</a>
            </li>
            <li>News</li>
        </ul>
    </div>
    <!-- end of breadcrumb -->
    <!-- cards -->
    <div class="uk-container uk-container-muted">
        <div class="uk-child-width-1-2@s uk-child-width-1-3@m uk-child-width-1-4@l " uk-grid uk-scrollspy="cls: uk-animation-fade; target: .uk-card; delay: 100; repeat: true">

            {% for article in articles %}
                <div>
                    <div class="uk-card uk-card-default uk-card-hover">
                        <div class="uk-card-header">
                            <div class="uk-grid-small" uk-grid>
                                <p class="news">{{article.category|capitalize}}</p>

                                <div class="uk-width-auto">
                                    <a href="{{ path('article_show',{'slug':article.slug}) }}">
                                        <img class="uk-border-rounded" src="{{asset('img/uploads/' ~ article.image)}}" alt="{{article.imageCaption}}">
                                    </a>
                                </div>
                                <div class="uk-width-expand">
                                    <h3 class="uk-card-title uk-margin-remove-bottom">{{article.title}}</h3>
                                    <p class="uk-text-meta ">
                                        {{article.subtitle}}
                                    </p>
                                </div>
                            </div>
                        </div>
                        <div class="uk-card-body">
                            <p>{{article.content|slice(0,120)|raw}}...</p>
                        </div>
                        <div class="uk-card-footer">
                            <div class="uk-grid-small uk-grid-divider" uk-grid>
                                <a class="uk-button uk-button-text" href="{{ path('article_show',{'slug':article.slug}) }}" class="uk-button uk-button-text">En savoir +</a>
                                {% if is_granted("ROLE_USER") %}
                                    <a class="uk-button uk-button-link" href="{{ path('article_edit',{'slug':article.slug}) }}" uk-tooltip="title:modifier l'article" uk-icon="icon: file-edit"></a>
                                {% endif %}
                            </div>

                        </div>
                    </div>
                </div>
            {% endfor %}

        </div>
    </div>
</section>

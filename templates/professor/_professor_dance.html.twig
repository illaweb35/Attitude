{% extends 'base.html.twig' %}

{% block title %}Professeurs
{% endblock %}

{% block body %}
    <section
        class="uk-section">
        <!-- breadCrumb -->
        <div class="uk-container uk-margin">
            <ul class="uk-breadcrumb">
                <li>
                    <a href="{{path('app_home')}}">Home</a>
                </li>

                <li>
                    <p>Professeurs</p>
                </li>
            </ul>
        </div>
        <!-- end of breadcrumb -->

        <div class="uk-container uk-margin-top">
            <h1>Professeurs</h1>
            <div class="uk-child-width-1-2@s uk-child-width-1-3@m" uk-grid>
                {% for professor in professors %}
                    <div>
                        <div class="uk-card uk-card-default ">
                            <div class="uk-card-header">
                                <a class="uk-button uk-button-text" href="{{ path('professor_show',{'slug':professor.slug})}}" uk-tooltip="title: Voir +">
                                    <div class="uk-grid-small uk-flex-middle" uk-grid>
                                        <div class="uk-width-auto">
                                            <img class="uk-border-rounded" src="{{ asset('img/uploads/' ~ professor.image)}}" alt="{{professor.imageCaption}}" width="80">
                                        </div>
                                        <div class="uk-width-expand">
                                            <h3 class="uk-card-title uk-margin-remove-bottom">{{professor.firstName}}</h3>
                                            <p class="uk-text-meta uk-margin-remove-top">
                                                {{professor.lastName}}
                                            </p>
                                        </div>
                                    </div>
                                </a>
                            </div>
                            <div class="uk-card-body">
                                Enseigne les danses suivantes:
                                {% for dance in professor.dances %}
                                    <ul class="uk-list">
                                        <li>
                                            _
                                            <a href="{{ path('dance_show',{'slug':dance.slug})}}">{{dance.title}}</a>
                                        </li>
                                    </ul>
                                {% endfor %}
                            </div>
                            <div class="uk-card-footer">
                                <div class="uk-grid-small uk-grid-divider">
                                    <a class="uk-button uk-button-text" href="javascript:history.go(-1)" uk-icon="icon: arrow-left;ratio:1.5" uk-tooltip="title: Page précédente"></a>
                                    <a class=" uk-button uk-button-text" href=" {{ path('dance_index')}} ">
                                        retour aux dances
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>
{% endblock %}

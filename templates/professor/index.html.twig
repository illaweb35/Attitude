{% extends 'base.html.twig' %}

{% block title %}Professor index
{% endblock %}

{% block body %}
    <section class="uk-section">
        <div class="uk-container uk-margin-top">
            <h1>Professor index</h1>
            <div class="uk-float-right">
                <a class="uk-button uk-button-primary" href="{{ path('professor_new') }}">Create new</a>
            </div>

            <table class="uk-table uk-table-hover">
                <thead>
                    <tr>
                        <th>CreatedAt</th>
                        <th>Nom Pr√©nom</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>Mobile</th>
                        <th>actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for professor in professors %}
                        <tr>
                            <td>
                                <a href="{{ path('professor_show',{'id':professor.id})}}" uk-tooltip="title: Voir +"><img class="uk-border-circle" data-src="{{ professor.image}}" alt="{{professor.imageCaption}}" width="60" uk-img></a>
                            </td>
                            <td>
                                <p>{{ professor.fullName }}</p>
                            </td>
                            <td>
                                <p class="uk-text-small">{{ professor.email }}</p>
                            </td>
                            <td>
                                <p class="uk-text-small">{{ professor.phoneNumber|formatPhone(professor.phoneNumber) }}</p>
                            </td>

                            <td>
                                <p class="uk-text-small">{{ professor.mobileNumber|formatPhone(professor.mobileNumber) }}</p>
                            </td>

                            <td>
                                <a href="{{ path('professor_show', {'id': professor.id}) }}">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a class="uk-button uk-button-link" href="{{ path('professor_edit', {'id': professor.id}) }}" uk-icon="icon: file-edit"></a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="12">no records found</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </section>

{% endblock %}
